<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:amq="http://activemq.apache.org/schema/core"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd
           http://activemq.apache.org/schema/core 
           http://activemq.apache.org/schema/core/activemq-core-5.2.0.xsd">
	<context:property-placeholder location="classpath:alertscape.properties" />
	<!-- The JMS beans -->
	<amq:broker useJmx="false" persistent="false" start="true">
		<amq:transportConnectors>
			<amq:transportConnector uri="${jms.url}" />
		</amq:transportConnectors>
	</amq:broker>
	<bean id="jmsFactory" class="org.apache.activemq.ActiveMQConnectionFactory">
		<property name="brokerURL">
			<value>${jms.url}</value>
		</property>
	</bean>
	<amq:topic id="uiAlertStream" physicalName="com.alertscape.pump.Alerts" />
	<bean id="kyriakiOnramp" class="com.alertscape.pump.onramp.file.WebAccessLogFileOnramp"
		init-method="onrampInit" destroy-method="shutdown">
		<property name="transport" ref="alertTransport" />
		<property name="equator" ref="defaultAlertEquator" />
		<property name="filename" value="/var/log/apache2/kyriaki-access.log" />
        <property name="siteName" value="kyriaki.net" />
		<property name="sourceName" value="KYRIAKI_NET" />
	</bean>
	<bean id="htsOnramp" class="com.alertscape.pump.onramp.file.WebAccessLogFileOnramp"
		init-method="onrampInit" destroy-method="shutdown">
		<property name="transport" ref="alertTransport" />
		<property name="equator" ref="defaultAlertEquator" />
		<property name="filename"
			value="/var/log/apache2/healthtakenseriously-access.log" />
		<property name="siteName" value="HealthTakenSeriously" />
        <property name="sourceName" value="HTS_COM" />
	</bean>
	<bean id="sandjOnramp" class="com.alertscape.pump.onramp.file.WebAccessLogFileOnramp"
		init-method="onrampInit" destroy-method="shutdown">
		<property name="transport" ref="alertTransport" />
		<property name="equator" ref="defaultAlertEquator" />
		<property name="filename" value="/var/log/apache2/sandj-access.log" />
		<property name="siteName" value="SAndJ" />
        <property name="sourceName" value="SANDJ_US" />
	</bean>
	<bean id="alertTransport" class="com.alertscape.pump.onramp.sender.LocalAlertTransport">
		<property name="pump" ref="alertpump" />
	</bean>
	<bean id="defaultAlertEquator" class="com.alertscape.pump.onramp.equator.AlertEquator">
		<property name="attributes">
			<list>
				<value>longDescription</value>
			</list>
		</property>
	</bean>
	<bean id="alertpump" class="com.alertscape.pump.ConfigurableAlertPump">
		<property name="dbOfframp" ref="dbOfframp" />
		<property name="jmsOfframp" ref="jmsOfframp" />
		<property name="alertSourceRepository" ref="alertSourceRepository" />
	</bean>
	<bean id="alertSourceRepository"
		class="com.alertscape.common.model.DefaultAlertSourceRepository"
		init-method="init">
		<property name="sourceDao" ref="sourceDao" />
	</bean>
	<bean id="dbOfframp" class="com.alertscape.pump.offramp.DatabaseOfframp">
		<property name="alertDao" ref="alertDao" />
	</bean>
	<bean id="alertDao" class="com.alertscape.common.dao.jdbc.AlertJdbcDao">
		<property name="dataSource" ref="asDataSource" />
		<property name="alertSourceRepository" ref="alertSourceRepository"/>
	</bean>
	<bean id="sourceDao" class="com.alertscape.common.dao.jdbc.AlertSourceJdbcDao">
		<property name="dataSource" ref="asDataSource" />
	</bean>
	<bean id="jmsOfframp" class="com.alertscape.pump.offramp.JmsOfframp"
		init-method="init" destroy-method="shutdown">
		<property name="factory" ref="jmsFactory" />
		<property name="topic" ref="uiAlertStream" />
	</bean>
	<!--
		the DataSource (parameterized for configuration via a
		PropertyPlaceHolderConfigurer)
	-->
	<bean id="asDataSource" destroy-method="close"
		class="org.apache.commons.dbcp.BasicDataSource">
		<property name="driverClassName" value="${jdbc.driverClassName}" />
		<property name="url" value="${jdbc.url}" />
		<property name="username" value="${jdbc.username}" />
		<property name="password" value="${jdbc.password}" />
	</bean>

	<!-- Service endpoints -->
	<bean id="alertService" class="com.alertscape.service.ConfigurableAlertService">
		<property name="pump" ref="alertpump" />
	</bean>
	<bean name="alertExporter"
		class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
		<property name="service" ref="alertService" />
		<property name="serviceInterface" value="com.alertscape.service.AlertService" />
	</bean>
</beans>