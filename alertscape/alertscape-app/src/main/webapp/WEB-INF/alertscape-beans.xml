<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd">
	<context:property-placeholder location="classpath:alertscape.properties" />
	<bean id="testOnramp" class="com.alertscape.pump.onramp.AlertOnramp"
		init-method="init">
		<property name="sender" ref="alertSender" />
		<property name="equator" ref="defaultAlertEquator" />
	</bean>
	<bean id="alertSender" class="com.alertscape.pump.onramp.sender.LocalAlertSender">
		<property name="pump" ref="alertpump" />
	</bean>
	<bean id="defaultAlertEquator" class="com.alertscape.pump.onramp.equator.AlertEquator">
	</bean>
	<bean id="alertpump" class="com.alertscape.pump.ConfigurableAlertPump">
		<property name="dbOfframp" ref="dbOfframp" />
	</bean>
	<bean id="dbOfframp" class="com.alertscape.pump.offramp.DatabaseOfframp">
		<property name="alertDao" ref="alertDao" />
	</bean>
	<bean id="alertDao" class="com.alertscape.common.dao.jdbc.AlertJdbcDao">
		<property name="dataSource" ref="asDataSource" />
	</bean>
	<!--
		the DataSource (parameterized for configuration via a
		PropertyPlaceHolderConfigurer)
	-->
	<bean id="asDataSource" destroy-method="close"
		class="org.apache.commons.dbcp.BasicDataSource">
		<property name="driverClassName" value="${jdbc.driverClassName}" />
		<property name="url" value="${jdbc.url}" />
		<property name="username" value="${jdbc.username}" />
		<property name="password" value="${jdbc.password}" />
	</bean>
</beans>